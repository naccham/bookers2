<div class="container px-5 px-sm-0">
  <!--バリデーションエラー表示-->
  <%= render 'books/error' %>

  <div class="row">
    <div class="col-md-3">
    <!--User info-->
      <%= render 'books/info',user: @user %>
      
      <!--New Book-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body"  name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success sign_up text-light" %>
        </div>
      <% end %>
    </div>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %></td>
            <% end %>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), class: 'btn btn-sm btn-danger',method: :delete %>
            <% end %>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>

