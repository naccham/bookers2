<div class="container px-5 px-sm-0">
  <!--バリデーションエラー表示-->
  <%= render 'books/error' %>

  <div class="row">
    <div class="col-md-3">
    <!--User info-->
      <%= render 'books/info',user: @user %>

      <!--New Book-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success sign_up text-light" %>
        </div>
      <% end %>
    </div>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @showbook.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= @showbook.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@showbook.id) do %>
              <%= @showbook.title %></td>
            <% end %>
          <td><%= @showbook.body %></td>
          <td>
            <% if @showbook.user == current_user %>
              <%= link_to "Edit", edit_book_path(@showbook), class: 'btn btn-sm btn-success' %>
            <% end %>
          </td>
          <td>
            <% if @showbook.user == current_user %>
              <%= link_to "Destroy", book_path(@showbook), class: 'btn btn-sm btn-danger',method: :delete %>
            <% end %>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>

